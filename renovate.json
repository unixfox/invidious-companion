{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "timezone": "UTC",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["deno"],
      "groupName": "Deno JSR packages",
      "matchPackagePrefixes": ["jsr:@std/", "jsr:@hono/", "jsr:@luanrt/"]
    },
    {
      "matchManagers": ["deno"],
      "groupName": "YouTube.js updates",
      "matchPackageNames": [
        "youtubei.js",
        "youtubei.js/Utils",
        "youtubei.js/NavigationEndpoint", 
        "youtubei.js/PlayerCaptionsTracklist"
      ]
    },
    {
      "matchManagers": ["deno"],
      "groupName": "ESM.sh packages",
      "matchPackagePrefixes": ["https://esm.sh/"]
    },
    {
      "matchManagers": ["deno"],
      "groupName": "Deno.land packages", 
      "matchPackagePrefixes": ["https://deno.land/"]
    },
    {
      "matchManagers": ["deno"],
      "groupName": "NPM packages",
      "matchPackagePrefixes": ["npm:"]
    },
    {
      "matchManagers": ["deno"],
      "groupName": "CDN packages",
      "matchPackagePrefixes": ["https://cdn.jsdelivr.net/"]
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true
}